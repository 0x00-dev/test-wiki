<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Wiki{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap/css/bootstrap.min.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}"/>
        {% endblock %}
    </head>
    <body>
        <div class="col-md-10 col-md-offset-1 main-content">
            <a href="/">
                <h1>Wiki</h1>
            </a>
            <div class="flashes">
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }}">{{ message }}</div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="sub-content">
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('lib/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
