{% extends 'base.html.twig' %}

{% block title %}Редактирование {{ page.title }}{% endblock %}
{% block body %}
    <div class="col-md-4 col-md-offset-4">
        <form class="form" action="/page/save" method="post">
            <input type="hidden" name="id" value="{{ page.id }}"/>
            <label for="title">Введите заголовок</label>
            <input class="form-control" name="title" placeholder="Заголовок" id="title" value="{{ page.title }}"/>
            <label for="text">Введите текст</label>
            <textarea class="form-control" name="text" placeholder="Текст" id="text">{{ page.text }}</textarea>
            <button class="btn btn-xs btn-success" style="margin-top: 10px;">Сохранить изменения</button>
            <a class="btn-link pull-right" style="margin-top: 10px;" href="{{ page.address }}/add">Добавить дочернюю страницу</a>
        </form>
    </div>
{% endblock %}